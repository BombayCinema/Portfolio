<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profileLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Profile Name"
        android:id="@+id/profileNameDetails"
        android:minWidth="130dp"
        android:maxWidth="130dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/emptyTime"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/profileTimeFrameDetails"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="15dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/emptyTime"
        android:textStyle="bold"
        android:textSize="12dp"
        android:id="@+id/profileIntervalDetails"
        android:layout_below="@+id/profileTimeFrameDetails"
        android:layout_marginLeft="156dp"
        android:layout_marginBottom="5dp"
        android:textColor="#ffffff" />

    <android.support.design.widget.FloatingActionButton
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_input_add"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:fabSize="mini"
        app:backgroundTint="#ffffff"
        android:id="@+id/activateProfile"
        android:tint="#26ff00"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="260dp"/>

    <android.support.design.widget.FloatingActionButton
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_edit"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:fabSize="mini"
        app:backgroundTint="#ffffff"
        android:id="@+id/editProfile"
        android:tint="#000000"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="310dp"/>

</RelativeLayout>