<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/timerInputLayout">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/emptyTime"
        android:textSize="45dp"
        android:id="@+id/timerInputText"
        android:layout_alignParentTop="true"
        android:layout_marginTop="42dp"
        android:layout_alignLeft="@+id/key1Button"
        android:textColor="#ffffff"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:minWidth="40dp"
        android:minHeight="40dp"
        android:id="@+id/keyBackButton"
        android:layout_toRightOf="@+id/timerInputText"
        android:layout_alignTop="@+id/timerInputText"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:src="@android:drawable/ic_input_delete"
        android:tint="#000000"
        android:onClick="onClick"
        android:clickable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:textSize="70dp"
        android:gravity="center"
        android:width="90dp"
        android:height="90dp"
        android:id="@+id/key1Button"
        android:layout_below="@+id/timerInputText"
        android:layout_toLeftOf="@+id/key2Button"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:onClick="onClick"
        android:clickable="true"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2"
        android:textSize="70dp"
        android:gravity="center"
        android:width="90dp"
        android:height="90dp"
        android:id="@+id/key2Button"
        android:layout_below="@+id/timerInputText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="onClick"
        android:clickable="true"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="3"
        android:textSize="70dp"
        android:gravity="center"
        android:width="90dp"
        android:height="90dp"
        android:id="@+id/key3Button"
        android:layout_below="@+id/timerInputText"
        android:layout_toRightOf="@+id/key2Button"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:onClick="onClick"
        android:clickable="true"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="4"
        android:textSize="70dp"
        android:gravity="center"
        android:width="90dp"
        android:height="90dp"
        android:id="@+id/key4Button"
        android:layout_below="@+id/key2Button"
        android:layout_toLeftOf="@+id/key5Button"
        android:layout_marginRight="20dp"
        android:onClick="onClick"
        android:clickable="true"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5"
        android:textSize="70dp"
        android:gravity="center"
        android:width="90dp"
        android:height="90dp"
        android:id="@+id/key5Button"
        android:layout_below="@+id/key2Button"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:clickable="true"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="6"
        android:textSize="70dp"
        android:gravity="center"
        android:width="90dp"
        android:height="90dp"
        android:id="@+id/key6Button"
        android:layout_below="@+id/key2Button"
        android:layout_toRightOf="@+id/key5Button"
        android:layout_marginLeft="20dp"
        android:onClick="onClick"
        android:clickable="true"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="7"
        android:textSize="70dp"
        android:gravity="center"
        android:width="90dp"
        android:height="90dp"
        android:id="@+id/key7Button"
        android:layout_below="@+id/key5Button"
        android:layout_toLeftOf="@+id/key8Button"
        android:layout_marginRight="20dp"
        android:onClick="onClick"
        android:clickable="true"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="8"
        android:textSize="70dp"
        android:gravity="center"
        android:width="90dp"
        android:height="90dp"
        android:id="@+id/key8Button"
        android:layout_below="@+id/key5Button"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:clickable="true"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="9"
        android:textSize="70dp"
        android:gravity="center"
        android:width="90dp"
        android:height="90dp"
        android:id="@+id/key9Button"
        android:layout_below="@+id/key5Button"
        android:layout_toRightOf="@+id/key8Button"
        android:layout_marginLeft="20dp"
        android:onClick="onClick"
        android:clickable="true"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/key0Button"
        android:text="0"
        android:textSize="70dp"
        android:gravity="center"
        android:width="90dp"
        android:height="90dp"
        android:layout_below="@+id/key8Button"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:clickable="true"
        android:textColor="#ffffff"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:minWidth="60dp"
        android:minHeight="60dp"
        android:id="@+id/keySaveButton"
        android:layout_alignRight="@+id/key9Button"
        android:layout_alignBottom="@+id/key0Button"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:src="@android:drawable/ic_input_add"
        android:onClick="onClick"
        android:clickable="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:minWidth="60dp"
        android:minHeight="60dp"
        android:id="@+id/keyCancelButton"
        android:layout_alignLeft="@+id/key7Button"
        android:layout_alignBottom="@+id/key0Button"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"
        android:src="@android:drawable/ic_delete"
        android:onClick="onClick"
        android:clickable="true"/>



</RelativeLayout>